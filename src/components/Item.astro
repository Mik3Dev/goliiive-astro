---
interface Props {
  ticketName: string;
  location: string;
  place: string;
  priceList?: string;
  price: string;
}

const { ticketName, location, place, price, priceList } = Astro.props
---

<div
  class="block p-4 bg-white border border-gray-200 rounded-lg shadow my-2"
>
  <div class="flex p-2">
    <div class="flex-1">
      <p class="text-sm font-light text-gray-700">
        { location }
      </p>
      <p class="font-semibold text-gray-700">
        { ticketName } -
        <span class="px-1 line-through">{ priceList }</span>
        <span class="px-1">{ price }</span>
      </p>
      <p class="text-sm font-light text-gray-700">
        { place }
      </p>
    </div>
    <div class="flex justify-center items-center">
      <button
        type="button"
        class="text-red-700 font-medium rounded-full text-sm p-2.5 text-center inline-flex items-center mr-2"
      >
        <svg
          class="h-6 w-6 stroke-2 stroke-red-700"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
          ></path>
        </svg>
        <span class="sr-only">Icon description</span>
      </button>
    </div>
  </div>
</div>