---
import PriceItem from './PriceItem.astro';
import PrideItem  from './PriceItem.astro'

const itemList = [
  {
    id: '1',
    title: 'Compra normal',
    subtitle: null,
    checked: true,
  },
  {
    id: '2',
    title: 'Combo 4x3',
    subtitle: 'Pagas 4 y recibes 3',
    checked: false,
  },
  {
    id: '3',
    title: 'Combo 3x2',
    subtitle: 'Pagas 3 y recibes 2',
    checked: false,
  },
  {
    id: '4',
    title: 'Combo 2x1',
    subtitle: 'Pagas 2 y recibes 1',
    checked: false,
  },
]
---

<ul class="max-w-xs flex flex-col mx-auto my-8">
  {
    itemList.map(item => <PriceItem
      key={item.id}
      title={item.title}
      subtitle={item.subtitle}
      checked={item.checked}
    />)
  }
</ul>