---
import EventCards from "./EventCards.astro";

interface Event {
  img: string;
  place: string;
  date: string;
  eventName: string;
  eventDescription: string;
  discount?: string;
  promotion?: string;
  price: string;
}

interface Props {
  title: string;
  events: Event[];
  flagUrl?: string;
}

const { title, events, flagUrl } = Astro.props;
---

<div class="mt-16 mb-6">
  <div class="flex items-center mb-8">
    {flagUrl && <img src={flagUrl} alt="Bandera" class="w-12 h-8 mr-2" />}
    <h2 class="text-4xl font-bold">{title}</h2>
  </div>
  <EventCards events={events} />
</div>
