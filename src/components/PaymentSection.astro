---
import Item from './Item.astro'
import visa from '../assets/visa.png'
import mastercard from '../assets/mastercard.png'
import paypal from '../assets/paypal.png'

interface Props {
  href?: string;
}

const items = [
  {
    id: 1,
    location: 'Luneta central, fila 1, asiento 20',
    ticketName: 'Ticket VIP',
    price: "$270,00",
    priceList: "$300,00",
    place: 'Terraza del CCCT - 14 Abril',
  },
  {
    id: 2,
    location: 'Luneta central, fila 1, asiento 20',
    ticketName: 'Ticket VIP',
    price: "$270,00",
    priceList: "$300,00",
    place: 'Terraza del CCCT - 14 Abril',
  }
]

const { href } = Astro.props
---

<!-- Payments Column -->
<div class="col-span-3 md:col-span-1 px-4">
  <div
    id="alert-1"
    class="flex p-4 mb-4 text-emerald-500 rounded-lg bg-emerald-100"
    role="alert"
  >
    <span class="sr-only">Info</span>
    <div class="ml-3 text-sm font-medium">
      Tiempo de reserva 11:54 Min.
    </div>
    <svg
      class="w-8 h-8 ml-auto -mx-1.5 -my-1.5 p-1.5 inline-flex stroke-emerald-500 stroke-2"
      fill="none"
      stroke="currentColor"
      stroke-width="1.5"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"
      ></path>
    </svg>
  </div>
  <!-- Items Section -->
  { items.map(item => <Item
    ticketName={ item.ticketName }
    location={item.location}
    place={item.place}
    price={item.price}
    priceList={item.priceList}
  />) }
  <!-- End Items Section -->
  <div class="text-end text-gray-700 font-semibold px-2">
    Sub total: $540,00
  </div>

  <div>
    <div class="text-xs mt-8 font-light text-gray-400 text-center">
      Opciones de pago disponibles:
    </div>
    <div class="flex justify-center items-center my-2">
      <img class="h-16 mx-2" src={ visa } alt="visa" />
      <img
        class="h-16 mx-2"
        src={ mastercard }
        alt="mastercard"
      />
      <img class="h-16 mx-2" src={ paypal } alt="paypal" />
    </div>
    <a
      class="block w-full text-center text-white bg-primary hover:bg-sky-700 focus:ring-4 focus:ring-sky-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 my-2"
      href={ href || '#' }
    >
      Continuar
    </a>
    <div class="text-xs my-2 font-light text-gray-400 text-center">
      **No incluye impuestos ni comisiones
    </div>
  </div>
</div>
<!-- End Payments Section -->
