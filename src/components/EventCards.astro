---
interface Event {
  img: string;
  place: string;
  date: string;
  eventName: string;
  eventDescription: string;
  discount?: string;
  promotion?: string;
  price: string;
}

interface Props {
  events: Event[];
}

const { events } = Astro.props;
---

<!-- Cards -->
<div class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-2 md:gap-8 mt-8">
  {
    events.map((event) => (
      <div class="flex flex-col bg-white overflow-hidden shadow">
        <div>
          <img
            src={event.img}
            alt="Imagen del evento"
            class="w-full h-full object-cover"
          />
        </div>

        {(event.discount || event.promotion) && (
          <div class="flex justify-end">
            {event.promotion && (
              <span class="bg-yellow-600 text-white py-1 px-2 text-xs m-1">
                Martes de 2x1
              </span>
            )}

            {event.discount && (
              <span class="bg-red-600 text-white py-1 px-2 text-xs m-1">
                10% OFF
              </span>
            )}
          </div>
        )}

        <div class="flex items-center mb-1 p-4">
          <div class="flex items-center bg-gray-200 px-1 py-1 mr-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-3 w-3 mr-1 text-gray-600"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path d="M16.105 3.895A8 8 0 113.895 16.105 8 8 0 0116.105 3.895zM10 18a6 6 0 100-12 6 6 0 000 12zm1-8a1 1 0 00-2 0v3a1 1 0 001 1h1a1 1 0 100-2h-1v-2z" />
            </svg>
            <span class="text-gray-600 text-xs">{event.place}</span>
          </div>
          <div class="flex items-center bg-gray-200 px-1 py-1">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-3 w-3 mr-1 text-gray-600"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M2 2a2 2 0 012-2h14a2 2 0 012 2v16a2 2 0 01-2 2H4a2 2 0 01-2-2V2zm2 1a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zm0 3a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm0 3a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm0 3a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm4-6a1 1 0 002 0v2.586l1.707-1.707a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414L9 10.586V8z"
                clip-rule="evenodd"
              />
            </svg>
            <span class="text-gray-600 text-xs">{event.date}</span>
          </div>
        </div>

        <h3 class="text-sm md:text-md lg:text-md xl:text-lg font-bold mb-2 px-2 uppercase ">
          {event.eventName}
        </h3>

        <p class="flex-0 text-gray-700 px-2 mb-6 truncate flex-1">
          {event.eventDescription}
        </p>

        <div class="flex flex-col sm:flex-row justify-center items-center my-2">
          <button class="bg-sky-500 hover:bg-sky-600 text-white py-2 px-8 button-long focus:outline-none focus:ring focus:border-blue-300">
            COMPRAR
          </button>
          <div class="bg-orange-500 text-white py-2 px-3  text-xs m-1">
            {event.price}
          </div>
        </div>
      </div>
    ))
  }
</div>
<!-- End Cards -->
