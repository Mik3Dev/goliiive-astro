---
import PageLayout from '../../layouts/PageLayout.astro'
import StepHero from '../../components/StepHero.astro';
import Steps from '../../components/Steps.astro';
import StepHeader from '../../components/StepHeader.astro';
import PaymentSection from '../../components/PaymentSection.astro';
import PaymentDetail from '../../components/PaymentDetail.astro';
import visa from '../../assets/visa.png'
import mastercard from '../../assets/mastercard.png'
import paypal from '../../assets/paypal.png'
---

<PageLayout>
	<StepHero />
	<Steps />
	<StepHeader />

	<!-- Content Section -->
	<section class="max-w-screen-xl mx-auto my-6 grid grid-cols-3 gap-8">
		<!-- Form Column -->
		<div class="col-span-3 md:col-span-2 px-4">
			<div>
				<h4 class="text-primary text-xl">
          SELECCIONA MÉTODO DE PAGO
				</h4>

        <div class="my-10 max-w-sm mx-auto">
          <div
            class="block w-full p-3 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 my-2"
          >
            <label class="flex items-center" for="payment-option-1">
              <input
                id="payment-option-1"
                type="radio"
                name="payments"
                value="Paypal"
                class="w-4 h-4 border-gray-300 focus:ring-2 focus:ring-sky-400 hidden"
              />
              <div class="flex justify-center items-center max-h-8 w-full">
                <img class="h-16 mx-2" src={ paypal } alt="paypal" />
              </div>
            </label>
          </div>

          <div
            class="block w-full p-3 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 my-2"
          >
            <label class="flex items-center" for="payment-option-2">
              <input
                id="payment-option-2"
                type="radio"
                name="payments"
                value="Paypal"
                class="w-4 h-4 border-gray-300 focus:ring-2 focus:ring-sky-400 hidden"
              />
              <div class="flex justify-center items-center max-h-8 w-full">
                <img class="h-10 mx-2" src={ visa } alt="visa" />
                <img
                  class="h-10 mx-2"
                  src={ mastercard }
                  alt="mastercard"
                />
              </div>
            </label>
          </div>

          <div
            class="block w-full p-3 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 my-2"
          >
            <label class="flex items-center" for="payment-option-3">
              <input
                id="payment-option-3"
                type="radio"
                name="payments"
                value="Paypal"
                class="w-4 h-4 border-gray-300 focus:ring-2 focus:ring-sky-400 hidden"
              />
              <label
                for="payment-option-3"
                class="block ml-2 text-xl font-light text-gray-700 text-center w-full"
              >
                Pago móvil
              </label>
            </label>
          </div>
        </div>

			
        <PaymentDetail />
      </div>
		</div>
		<!-- EndForm Column -->

		<PaymentSection href="/steps/08" />
	</section>
	<!-- EndContent Section -->
</PageLayout>

